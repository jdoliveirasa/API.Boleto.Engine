@model UI.WebApplication.Models.Product

@{
    ViewData["Title"] = "Add";
}

<h2>Add</h2>

<h4>Product</h4>

<div class="row">
    <form method="post" enctype="multipart/form-data" asp-controller="product" asp-action="add">
        <table cellpadding="2" cellspacing="2">
            <tr>
                <td>Name</td>
                <td>
                    <input asp-for="Name" />
                </td>
            </tr>
            <tr>
                <td>Price</td>
                <td>
                    <input asp-for="Price" />
                </td>
            </tr>
            <tr>
                <td>Quantity</td>
                <td>
                    <input asp-for="Quantity" />
                </td>
            </tr>
            <tr>
                <td>Status</td>
                <td>
                    <input type="checkbox" asp-for="Status" />
                </td>
            </tr>
            <tr>
                <td>Photo</td>
                <td>
                    <input type="file" name="photo" />
                </td>
            </tr>

            <tr>
                <td>&nbsp;</td>
                <td>
                    <input type="submit" value="Save" />
                </td>
            </tr>

        </table>
    </form>
</div>

